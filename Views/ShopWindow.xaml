<Window x:Class="PokeBar.Views.ShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PokÃ©Mart" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <!-- Estilos modernos tipo React/Material UI -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D1D5DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ItemCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="16" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.2" Color="#000000"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#3B82F6" CornerRadius="16,16,0,0" Padding="24,20">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="ðŸ›’ PokÃ©Mart" FontSize="28" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Compre itens para sua aventura" FontSize="14" Foreground="#E0E7FF" Margin="0,4,0,0"/>
                    </StackPanel>
                    <Button Content="âœ•" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="24"
                            Padding="10"
                            Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Wallet Info -->
            <Border Grid.Row="0" 
                    Background="White" 
                    CornerRadius="12" 
                    Padding="16,12"
                    Margin="24,70,24,0"
                    VerticalAlignment="Top">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" Color="#000000"/>
                </Border.Effect>
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’°" FontSize="24" VerticalAlignment="Center"/>
                        <TextBlock Text="Seu Dinheiro" FontSize="14" Foreground="#6B7280" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>
                    <TextBlock x:Name="MoneyText" 
                               Text="$0" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#10B981" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Items List -->
            <ScrollViewer Grid.Row="1" Margin="24,110,24,24" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ItemsPanel">
                    <!-- Items serÃ£o adicionados por cÃ³digo -->
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#F9FAFB" Padding="24,16" CornerRadius="0,0,16,16">
                <Grid>
                    <TextBlock x:Name="InventoryText" 
                               Text="ðŸ“¦ PokÃ©bolas: 0" 
                               FontSize="14" 
                               Foreground="#6B7280"
                               VerticalAlignment="Center"/>
                    <Button Content="Fechar" 
                            Style="{StaticResource SecondaryButton}"
                            HorizontalAlignment="Right"
                            Click="CloseButton_Click"
                            Padding="32,12"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
