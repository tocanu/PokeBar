                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="0" ShadowDepth="3" Direction="315"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
