<Window x:Class="PokeBar.Views.PokeballWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="24" Height="24"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        IsHitTestVisible="True"
        Focusable="True">
    
    <Window.Resources>
        <!-- Sprite vetorial da Pokébola -->
        <DrawingImage x:Key="PokeballSprite">
            <DrawingImage.Drawing>
                <DrawingGroup>
                    <!-- Fundo branco -->
                    <GeometryDrawing Brush="White">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry RadiusX="11" RadiusY="11" Center="12,12"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    
                    <!-- Metade superior vermelha -->
                    <GeometryDrawing Brush="#E53935">
                        <GeometryDrawing.Geometry>
                            <PathGeometry>
                                <PathFigure StartPoint="1,12">
                                    <LineSegment Point="1,12"/>
                                    <ArcSegment Size="11,11" Point="23,12" SweepDirection="Clockwise"/>
                                    <LineSegment Point="1,12"/>
                                </PathFigure>
                            </PathGeometry>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    
                    <!-- Faixa preta central -->
                    <GeometryDrawing Brush="Black">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="1,10.5,22,3"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    
                    <!-- Botão branco central -->
                    <GeometryDrawing Brush="White">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry RadiusX="3.5" RadiusY="3.5" Center="12,12"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    
                    <!-- Borda do botão -->
                    <GeometryDrawing Brush="Transparent">
                        <GeometryDrawing.Pen>
                            <Pen Brush="Black" Thickness="0.5"/>
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry RadiusX="3.5" RadiusY="3.5" Center="12,12"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    
                    <!-- Borda externa -->
                    <GeometryDrawing Brush="Transparent">
                        <GeometryDrawing.Pen>
                            <Pen Brush="Black" Thickness="1"/>
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry RadiusX="11" RadiusY="11" Center="12,12"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>
    </Window.Resources>
    
    <Grid Background="Transparent">
        <Image x:Name="PokeballImage" 
               Source="{StaticResource PokeballSprite}"
               Width="24" Height="24"
               RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <RotateTransform x:Name="PokeballRotate" Angle="0"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
