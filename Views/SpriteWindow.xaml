<Window x:Class="PokeBar.Views.SpriteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PokÃ©Bar"
        Width="128" Height="56"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent"
        Topmost="True" ShowInTaskbar="False"
        ResizeMode="NoResize"
        Focusable="False"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        MouseDown="Window_MouseDown"
        MouseMove="Window_MouseMove"
        MouseLeftButtonUp="Window_MouseLeftButtonUp">
    <Window.Resources>
        <DrawingImage x:Key="PokeballSprite">
            <DrawingImage.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="#E53935" Pen="{x:Null}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,16,8"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="White" Pen="{x:Null}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,8,16,8"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="{x:Null}">
                        <GeometryDrawing.Pen>
                            <Pen Brush="Black" Thickness="1"/>
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <LineGeometry StartPoint="0,8" EndPoint="16,8"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="{x:Null}" Pen="{x:Null}">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="8,8" RadiusX="8" RadiusY="8"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="White" Pen="{x:Null}">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="8,8" RadiusX="3.5" RadiusY="3.5"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="{x:Null}">
                        <GeometryDrawing.Pen>
                            <Pen Brush="Black" Thickness="1"/>
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="8,8" RadiusX="8" RadiusY="8"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="{x:Null}">
                        <GeometryDrawing.Pen>
                            <Pen Brush="Black" Thickness="0.8"/>
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="8,8" RadiusX="3.5" RadiusY="3.5"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>
    </Window.Resources>
    <Grid RenderOptions.BitmapScalingMode="NearestNeighbor">
        <Grid.RenderTransform>
            <ScaleTransform x:Name="BounceScale" ScaleX="1" ScaleY="1"/>
        </Grid.RenderTransform>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image x:Name="PlayerImage"
               Source="{Binding CurrentFrame}"
               Stretch="None"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <TranslateTransform x:Name="PlayerTranslate"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Image x:Name="EnemyImage"
               Grid.Column="1"
               Source="{Binding WildCurrentFrame}"
               Stretch="None"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               Visibility="{Binding WildVisible, Converter={StaticResource BoolToVis}}">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <TranslateTransform x:Name="EnemyTranslate"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Border Grid.ColumnSpan="2"
                Background="#CC000000" CornerRadius="6"
                Padding="6" HorizontalAlignment="Center"
                VerticalAlignment="Top" Margin="0, -2, 0, 0"
                Visibility="{Binding BubbleVisible, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="{Binding BubbleText}" Foreground="White" FontSize="12"/>
        </Border>

        <Canvas x:Name="FxCanvas" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsHitTestVisible="False">
            <Image x:Name="PokeballImage"
                   Width="16" Height="16"
                   Source="{StaticResource PokeballSprite}"
                   Visibility="Collapsed"/>
        </Canvas>
    </Grid>
</Window>
