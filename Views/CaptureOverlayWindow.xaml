<Window x:Class="PokeBar.Views.CaptureOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CaptureOverlay"
        ShowInTaskbar="False"
        ShowActivated="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        Focusable="False"
        Opacity="0">
    <Window.Resources>
        <DrawingImage x:Key="OverlayPokeballSprite">
            <DrawingImage.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="#E53935" Pen="{x:Null}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,20,10"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="White" Pen="{x:Null}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,10,20,10"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing>
                        <GeometryDrawing.Pen>
                            <Pen Brush="Black" Thickness="1.2"/>
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <LineGeometry StartPoint="0,10" EndPoint="20,10"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing>
                        <GeometryDrawing.Pen>
                            <Pen Brush="Black" Thickness="1.2"/>
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="10,10" RadiusX="10" RadiusY="10"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="White" Pen="{x:Null}">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="10,10" RadiusX="4.2" RadiusY="4.2"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing>
                        <GeometryDrawing.Pen>
                            <Pen Brush="Black" Thickness="1"/>
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="10,10" RadiusX="4.2" RadiusY="4.2"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>
    </Window.Resources>
    <Canvas x:Name="RootCanvas" Background="Transparent"
            MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
            MouseMove="Canvas_MouseMove"
            MouseLeftButtonUp="Canvas_MouseLeftButtonUp">
        <Line x:Name="PowerLine"
              Stroke="#AAFFFFFF"
              StrokeThickness="3.5"
              StrokeStartLineCap="Round"
              StrokeEndLineCap="Round"
              Visibility="Collapsed"/>

        <Image x:Name="PokeballOverlay"
               Width="28" Height="28"
               Source="{StaticResource OverlayPokeballSprite}"
               Visibility="Collapsed"
               RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <RotateTransform x:Name="PokeballRotation" Angle="0"/>
            </Image.RenderTransform>
        </Image>
    </Canvas>
</Window>
