<Window x:Class="PokeBar.Views.PCWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:utils="clr-namespace:PokeBar.Utils"
        Title="Sistema de Armazenamento PokÃ©mon" 
        Width="600" Height="650"
        WindowStartupLocation="CenterScreen"
        Background="#5A6E8A"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <utils:PortraitPathConverter x:Key="PortraitPathConverter"/>
        
        <!-- Estilo para botÃµes principais (Trocar) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#6EC9FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#28546E"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="0" ShadowDepth="3" Direction="315"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.8" BlurRadius="0" ShadowDepth="1" Direction="315"/>
                                </ContentPresenter.Effect>
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8ED9FF"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#7F8C8D"/>
                    <Setter Property="BorderBrush" Value="#5A6E8A"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botÃ£o Soltar (destrutivo) -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#F86858"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#8B4513"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="0" ShadowDepth="3" Direction="315"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.8" BlurRadius="0" ShadowDepth="1" Direction="315"/>
                                </ContentPresenter.Effect>
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF7868"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#7F8C8D"/>
                    <Setter Property="BorderBrush" Value="#5A6E8A"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botÃ£o Fechar (estilo START) -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="#2E7F72"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1A4D44"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Padding" Value="40,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="0" ShadowDepth="3" Direction="315"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.8" BlurRadius="0" ShadowDepth="1" Direction="315"/>
                                </ContentPresenter.Effect>
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A9F92"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border BorderBrush="#2C3C52" BorderThickness="4" Background="#5A6E8A">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- PokÃ©mon Ativo (estilo GBA) -->
            <Border Grid.Row="0" 
                    Background="#3AB3A6" 
                    BorderBrush="#F7D96D" 
                    BorderThickness="3" 
                    Margin="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="0" ShadowDepth="3" Direction="315"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Barra de tÃ­tulo amarela -->
                    <Border Grid.Row="0" Background="#F7D96D" Padding="10,5">
                        <TextBlock Text="POKÃ‰MON ATIVO" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#5A3A1A">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="White" Opacity="0.5" BlurRadius="0" ShadowDepth="1" Direction="315"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Border>
                    
                    <!-- Card do PokÃ©mon ativo -->
                    <Border Grid.Row="1" Margin="8" Background="#70C5EC" BorderBrush="#28546E" BorderThickness="2" Padding="10">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="0" ShadowDepth="2" Direction="315"/>
                        </Border.Effect>
                        <ListBox x:Name="ActiveListBox" 
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="64" Height="64" Margin="0,0,15,0" RenderOptions.BitmapScalingMode="NearestNeighbor">
                                            <Image.Source>
                                                <Binding Path="DexNumber" Converter="{StaticResource PortraitPathConverter}"/>
                                            </Image.Source>
                                        </Image>
                                        <StackPanel>
                                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,5">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Color="Black" Opacity="1" BlurRadius="0" ShadowDepth="2" Direction="315"/>
                                                </TextBlock.Effect>
                                                <Run Text="{Binding Name}"/>
                                                <Run Text=" Lv."/>
                                                <Run Text="{Binding Level}"/>
                                            </TextBlock>
                                            <TextBlock FontSize="12" Foreground="White">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect Color="Black" Opacity="0.8" BlurRadius="0" ShadowDepth="1" Direction="315"/>
                                                </TextBlock.Effect>
                                                <Run Text="HP: "/>
                                                <Run Text="{Binding CurrentHP}"/>
                                                <Run Text="/"/>
                                                <Run Text="{Binding MaxHP}"/>
                                                <Run Text=" | Atk: "/>
                                                <Run Text="{Binding Attack}"/>
                                                <Run Text=" | Def: "/>
                                                <Run Text="{Binding Defense}"/>
                                                <Run Text=" | Spd: "/>
                                                <Run Text="{Binding Speed}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Grid>
            </Border>
            
            <!-- PC (BOX) - Lista de PokÃ©mon -->
            <Border Grid.Row="1" 
                    Background="#2C3C52" 
                    BorderBrush="#F7D96D" 
                    BorderThickness="3" 
                    Margin="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="0" ShadowDepth="3" Direction="315"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Barra de tÃ­tulo -->
                    <Border Grid.Row="0" Background="#F7D96D" Padding="10,5">
                        <TextBlock FontSize="14" FontWeight="Bold" Foreground="#5A3A1A">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="White" Opacity="0.5" BlurRadius="0" ShadowDepth="1" Direction="315"/>
                            </TextBlock.Effect>
                            <Run Text="BOX â€” "/>
                            <Run x:Name="BoxCountText" Text="0"/>
                            <Run Text=" PokÃ©mon"/>
                        </TextBlock>
                    </Border>
                    
                    <!-- Lista com scroll estilo GBA -->
                    <ListBox x:Name="BoxListBox" 
                             Grid.Row="1"
                             Background="#5A6E8A" 
                             BorderThickness="0"
                             Margin="8"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             SelectionChanged="BoxListBox_SelectionChanged">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="#70C5EC"/>
                                <Setter Property="BorderBrush" Value="#28546E"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Margin" Value="0,0,0,5"/>
                                <Setter Property="Padding" Value="8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#F7D96D"/>
                                        <Setter Property="BorderBrush" Value="#FF9500"/>
                                        <Setter Property="BorderThickness" Value="3"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#8ED9FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="40" Height="40" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="NearestNeighbor">
                                        <Image.Source>
                                            <Binding Path="DexNumber" StringFormat="C:\Users\Arthur\Documents\Projetos\SpriteCollab\portrait\{0:D4}\Normal.png"/>
                                        </Image.Source>
                                    </Image>
                                    <StackPanel>
                                        <TextBlock FontSize="14" FontWeight="Bold" Foreground="White">
                                            <TextBlock.Effect>
                                                <DropShadowEffect Color="Black" Opacity="1" BlurRadius="0" ShadowDepth="1" Direction="315"/>
                                            </TextBlock.Effect>
                                            <Run Text="{Binding Name}"/>
                                            <Run Text=" Lv."/>
                                            <Run Text="{Binding Level}"/>
                                        </TextBlock>
                                        <TextBlock FontSize="11" Foreground="White">
                                            <TextBlock.Effect>
                                                <DropShadowEffect Color="Black" Opacity="0.8" BlurRadius="0" ShadowDepth="1" Direction="315"/>
                                            </TextBlock.Effect>
                                            <Run Text="HP: "/>
                                            <Run Text="{Binding CurrentHP}"/>
                                            <Run Text="/"/>
                                            <Run Text="{Binding MaxHP}"/>
                                            <Run Text=" | Atk: "/>
                                            <Run Text="{Binding Attack}"/>
                                            <Run Text=" | Def: "/>
                                            <Run Text="{Binding Defense}"/>
                                            <Run Text=" | Spd: "/>
                                            <Run Text="{Binding Speed}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- BotÃµes de AÃ§Ã£o -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <Button x:Name="SwitchButton" 
                        Content="ðŸ”„ TROCAR" 
                        Width="150" 
                        Click="SwitchButton_Click" 
                        IsEnabled="False"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,10,0"/>
                <Button x:Name="ReleaseButton" 
                        Content="ðŸ—‘ï¸ SOLTAR" 
                        Width="150" 
                        Click="ReleaseButton_Click" 
                        IsEnabled="False"
                        Style="{StaticResource DangerButton}"/>
            </StackPanel>
            
            <!-- BotÃ£o Fechar (estilo START) -->
            <Button Grid.Row="3" 
                    Content="âœ–ï¸ FECHAR" 
                    Click="CloseButton_Click" 
                    Style="{StaticResource CloseButton}"
                    HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Window>
